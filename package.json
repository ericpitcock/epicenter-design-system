{
  "name": "@ericpitcock/ep-design-system",
  "version": "2.0.0-beta",
  "description": "Epicenter Design System",
  "type": "module",
  "scripts": {
    "netlify": "cd packages/epicenter-styles && npm install && cd ../epicenter-vue-components && npm install && cd ../epicenter-react-components && npm install && cd .. && npm install && npm run build-storybook",
    "netlify-build-docs": "npm install && cd docs && npm run docs:build",
    "install-all": "cd packages/epicenter-styles && npm install && cd ../epicenter-vue-components && npm install && cd ../epicenter-react-components && npm install && cd .. && npm install",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "storybook:react": "storybook dev -p 6007 -c .storybook-react",
    "build-storybook:react": "storybook build -c .storybook-react -o storybook-react-static",
    "yalc:publish": "cd packages/epicenter-styles && yalc publish && cd ../epicenter-vue-components && yalc publish && cd ../epicenter-icons && yalc publish",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericpitcock/epicenter-design-system.git"
  },
  "author": "Eric Pitcock",
  "license": "MIT",
  "dependencies": {
    "color-blind": "^0.1.3",
    "pinia": "^2.1.7",
    "vitepress": "^1.2.2",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@modyfi/vite-plugin-yaml": "^1.1.0",
    "@storybook/addon-a11y": "8.4.7",
    "@storybook/addon-actions": "8.4.7",
    "@storybook/addon-controls": "8.4.7",
    "@storybook/addon-docs": "8.4.7",
    "@storybook/addon-toolbars": "8.4.7",
    "@storybook/blocks": "8.4.7",
    "@storybook/react-vite": "8.4.7",
    "@storybook/test": "8.4.7",
    "@storybook/vue3": "8.4.7",
    "@storybook/vue3-vite": "8.4.7",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-vue": "^5.0.4",
    "babel-eslint": "^10.1.0",
    "chroma-js": "^2.4.2",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.17.0",
    "fs-extra": "^11.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "1.82.0",
    "storybook": "8.4.7",
    "svgo": "^3.3.2",
    "vite": "^5.2.8",
    "vite-svg-loader": "^5.1.0",
    "vue-docgen-api": "^4.79.2"
  }
}